<% include ../partials/header %>

<div class="container">
        <h1 style="text-align:center; margin:30px;">Create a New Campground</h1>
        <div style="width:30%; margin:0 auto;">
          <form action="/campgrounds" method="POST">
            <div class="form-group">
            <input class="form-control" type="text" placeholder="name" name="campground[name]">
            </div>
            <div class="form-group">
            <input class="form-control" type="text" placeholder="imageURL" name="campground[image]">
            </div>
            <div class="form-group">
            <input class="form-control" type="text" placeholder="description" name="campground[description]">
            </div>
            <div class="form-group">
            <input class="form-control" type="number" placeholder="price" name="campground[price]" min="0.01" step="0.01">
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </form>  
        <a href="/campgrounds">Go Back</a>
        </div>
</div>


<% include ../partials/footer %>